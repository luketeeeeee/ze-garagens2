// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  v           Int    @default(0) @map("__v") @ignore
  name        String
  phoneNumber String
  email       String @unique
  password    String
  cpf         String @unique

  @@map("users")
}

model Garage {
  id               String  @id @default(auto()) @map("_id") @db.ObjectId
  v                Int     @default(0) @map("__v") @ignore
  pricePerDay      Float
  owner            String
  ownerId          String
  ownerPhoneNumber String
  available        Boolean
  city             String
  neighborhood     String
  street           String
  number           Int
  cep              String

  @@map("garages")
}
